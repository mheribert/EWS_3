SELECT TLP_TERMINE.Terminnummer AS Turniernr, TLP_TERMINE.Datum, TLP_TERMINE.Bezeichnung, [PLZ] & " " & [Ort] AS Name, TLP_TERMINE.PLZ, TLP_TERMINE.Ort, TLP_TERMINE.Mitgliedsnr, TLP_TERMINE.Raum, TLP_TERMINE.Straße, TLP_TERMINE.Beginn, TLP_TERMINE.Ende, TLP_TERMINE.Clubname_kurz, Left([Terminnummer],1) AS Ausdr1, TLP_TERMINE.Turnierleiter FROM TLP_TERMINE WHERE (((TLP_TERMINE.Datum)>=Now()-1) AND ((Left([Terminnummer],1))=2)) ORDER BY TLP_TERMINE.Datum, [PLZ] & " " & [Ort], TLP_TERMINE.Bezeichnung;
