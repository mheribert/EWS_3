SELECT Majoritaet.RT_ID, Majoritaet.TP_ID, Majoritaet.WR1, Majoritaet.WR2, Majoritaet.WR3, Majoritaet.WR4, Majoritaet.WR5, Majoritaet.WR6, Majoritaet.WR7, Majoritaet.Platz, Majoritaet.DQ_ID, Majoritaet.Anmerkung, ([WR1] & " / " & [WR2] & " / " & [WR3] & IIf([WR4]=0,""," / " & [WR4]) & IIf([WR5]=0,""," / " & [WR5]) & IIf([WR6]=0,""," / " & [WR6]) & IIf([WR7]=0,""," / " & Format([WR7],"Standard"))) AS Majoritaet, ([WR1] & "/" & [WR2] & "/" & [WR3] & IIf([WR4]=0,"","/" & [WR4]) & IIf([WR5]=0,"","/" & [WR5]) & IIf([WR6]=0,"","/" & [WR6]) & IIf([WR7]=0,"","/" & Format([WR7],"#"))) AS MajoritaetKurz, Punktabzug.PA_Grund, Disqualifikationsgrund.DQ_Grund, IIf(Majoritaet.DQ_ID>0,1,0) AS disqualifiziert, Majoritaet.RT_ID_weiter, Majoritaet.Runde_Report, IIf(Majoritaet.PA_ID>0,1,0) AS punktabzug, Majoritaet.WR1_ID, Majoritaet.WR2_ID, Majoritaet.WR3_ID, Majoritaet.WR4_ID, Majoritaet.WR5_ID, Majoritaet.WR6_ID, Majoritaet.WR7_ID, Majoritaet.KO_Sieger
FROM Punktabzug INNER JOIN (Disqualifikationsgrund RIGHT JOIN Majoritaet ON Disqualifikationsgrund.DQ_ID = Majoritaet.DQ_ID) ON Punktabzug.PA_ID = Majoritaet.PA_ID;

